<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_radius"
    android:orientation="vertical"
    android:weightSum="320">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65">

        <TextView
            android:id="@+id/txt_date_picker_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:gravity="center"
            android:text="@string/Date_Dialog_Title"
            android:textColor="#343434"
            android:textSize="18sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d5d5"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="188"
        android:background="#ffffff"
        android:gravity="center">

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:theme="@style/MyBase.TimePicker"></DatePicker>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="67"
        android:orientation="horizontal"
        android:weightSum="320">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_date_picker_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="160"
            android:background="@drawable/dialog_cancel_button"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:text="@string/Dialog_Cancel_Button_Text"
            android:textColor="@color/colorTextColor"
            android:textSize="20dp"></androidx.appcompat.widget.AppCompatButton>

        <Button
            android:id="@+id/btn_date_picker_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="160"
            android:background="@drawable/dialog_done_button"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:text="@string/Dialog_Done_Button_Text"
            android:textColor="@color/white"
            android:textSize="20dp"></Button>
    </LinearLayout>

</LinearLayout>