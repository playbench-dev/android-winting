<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.Login.PwSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="375">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:paddingLeft="16dp"
            android:src="@drawable/ic_back"/>

        <com.playbench.winting.views.BoldTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="295"
            android:textColor="@color/colorTextColor"
            android:text="@string/Pw_Search_Title"
            android:gravity="center"
            android:textSize="20dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="19dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.playbench.winting.views.MediumTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="@string/Pw_Search_Id_Title"
                    android:textColor="@color/colorTextColor"/>

                <EditText
                    android:id="@+id/edt_pw_search_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:hint="@string/Pw_Search_Id_Place_Holder"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:textColorHint="@color/colorPlaceHolder"
                    android:textColor="@color/colorTextColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">
                <com.playbench.winting.views.MediumTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="@string/Pw_Search_Phone_Title"
                    android:textColor="@color/colorTextColor"/>

                <EditText
                    android:id="@+id/edt_pw_search_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:hint="@string/Pw_Search_Phone_Place_Holder"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:textColorHint="@color/colorPlaceHolder"
                    android:textColor="@color/colorTextColor"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_pw_search_done"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_radius_8dp"
        android:backgroundTint="@color/colorDisable"
        android:textColor="@color/colorDisableText"
        android:text="@string/Pw_Search_Button_Text"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:textSize="20dp"
        android:includeFontPadding="false"/>
</LinearLayout>