<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_new_request_list_item_tag"
                android:layout_width="22dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_new"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"/>
            <com.playbench.winting.views.MediumTextView
                android:id="@+id/txt_new_request_list_item_region"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorTextColor"
                android:textSize="10dp"
                android:gravity="center"
                android:text="@string/New_Reqeust_List_Region_Text"/>
        </RelativeLayout>
    

        <com.playbench.winting.views.MediumTextView
            android:id="@+id/txt_new_request_list_item_progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorTextColor"
            android:textSize="10dp"
            android:gravity="center"
            android:text="@string/New_Reqeust_List_Progress_Text"/>

        <com.playbench.winting.views.MediumTextView
            android:id="@+id/txt_new_request_list_item_due_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorTextColor"
            android:textSize="10dp"
            android:gravity="center"
            android:text="@string/New_Reqeust_List_Due_Date_Text"/>

        <com.playbench.winting.views.MediumTextView
            android:id="@+id/txt_new_request_list_item_reg_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorTextColor"
            android:textSize="10dp"
            android:gravity="center"
            android:text="@string/New_Reqeust_List_Register_Date_Text"/>
    </LinearLayout>
    
</LinearLayout>