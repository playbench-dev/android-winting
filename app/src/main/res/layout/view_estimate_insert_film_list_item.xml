<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.playbench.winting.views.MediumTextView
            android:id="@+id/txt_estimate_insert_list_item_film"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="@color/colorTextColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="9dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.playbench.winting.views.MediumTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextColor"
                    android:textSize="12dp"
                    android:text="@string/Estimate_Submit_Square_Meter_Text"/>

                <com.playbench.winting.views.RegularTextView
                    android:id="@+id/txt_estimate_insert_list_item_square_meter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextColor"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="14dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.playbench.winting.views.MediumTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextColor"
                    android:textSize="12dp"
                    android:text="@string/Estimate_Submit_Price"/>

                <com.playbench.winting.views.RegularTextView
                    android:id="@+id/txt_estimate_insert_list_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextColor"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

</LinearLayout>