<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.MyList.ImageSaveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="375">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:paddingLeft="16dp"
            android:src="@drawable/ic_back"/>

        <com.playbench.winting.views.BoldTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="295"
            android:text="@string/Image_Save_Title"
            android:gravity="center"
            android:textColor="@color/colorTextColor"
            android:textSize="20dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <com.playbench.winting.views.MediumTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextColor"
                android:text="@string/Image_Save_Before_Text"
                android:textSize="20dp"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:layout_marginTop="6dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="76dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom">

                        <LinearLayout
                            android:id="@+id/lin_image_save_before"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/stroke_no_radius"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_plus"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="12dp"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:id="@+id/lin_image_save_before_parent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <com.playbench.winting.views.MediumTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextColor"
                android:text="@string/Image_Save_Current_Text"
                android:textSize="20dp"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:layout_marginTop="6dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="76dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom">

                        <LinearLayout
                            android:id="@+id/lin_image_save_current"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/stroke_no_radius"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_plus"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="12dp"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:id="@+id/lin_image_save_current_parent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <com.playbench.winting.views.MediumTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextColor"
                android:text="@string/Image_Save_After_Text"
                android:textSize="20dp"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:layout_marginTop="6dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="76dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom">

                        <LinearLayout
                            android:id="@+id/lin_image_save_after"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/stroke_no_radius"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_plus"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="12dp"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:id="@+id/lin_image_save_after_parent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <com.playbench.winting.views.RegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:textSize="11dp"
                android:textColor="@color/colorTextColor"
                android:text="@string/Image_Save_Info_Text"
                android:gravity="center"
                android:paddingRight="16dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>