<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/lin_agree_category_popup_list_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_agree_category_popup_service"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:background="@drawable/shape_radius_8dp"
            android:backgroundTint="@color/colorDisable"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_agree_category_popup_personal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:background="@drawable/shape_radius_8dp"
            android:backgroundTint="@color/colorDisable"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_agree_category_popup_sensitivity"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:background="@drawable/shape_radius_8dp"
            android:backgroundTint="@color/colorDisable" />

    </LinearLayout>

</LinearLayout>