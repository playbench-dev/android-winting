<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_radius"
    android:orientation="vertical"
    android:weightSum="320">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65">

        <com.playbench.winting.views.MediumTextView
            android:id="@+id/txt_two_btn_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorTextColor"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d5d5"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="188"
        android:background="#ffffff"
        android:gravity="center">

        <com.playbench.winting.views.MediumTextView
            android:id="@+id/txt_two_btn_dialog_contents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorTextColor"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="67"
        android:orientation="horizontal"
        android:weightSum="320">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_two_btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="160"
            android:background="@drawable/dialog_cancel_button"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:text="@string/Dialog_Cancel_Button_Text"
            android:textColor="@color/colorTextColor"
            android:textSize="20dp"></androidx.appcompat.widget.AppCompatButton>

        <Button
            android:id="@+id/btn_two_btn_dialog_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="160"
            android:background="@drawable/dialog_done_button"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:includeFontPadding="false"
            android:text="@string/Dialog_Done_Button_Text"
            android:textColor="@color/white"
            android:textSize="20dp"></Button>
    </LinearLayout>

</LinearLayout>